@import 'variables.pcss';

.button {
  padding: 0;
  box-shadow: none;
}

.link {
  display: block;
  text-decoration: none;
}

.medium {
  padding: var(--distance-600) var(--distance-500);
  font-size: var(--text-500);
}

.small {
  padding: var(--distance-500) var(--distance-400);
  font-size: var(--text-400);
}
