@import 'normalize.css';
@import 'variables.pcss';

* {
  font-size: 100%;
  font-family: oxygen mono, monospace;
  color: rgba(0, 34, 51, 0.6);
}

a {
  color: inherit;
}

html {
  height: 100%;
}

body {
  min-height: 100vh;
}

h1 {
  font-size: 40px;
  font-weight: normal;
}

h2 {
  font-size: 35px;
  font-weight: normal;
  margin: var(--distance-600) 0;
}

button {
  outline: none !important;
  border: none;
}
